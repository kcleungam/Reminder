<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="#fefeeb"
    android:focusable="false">


    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/rowTimeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="try"
        android:textSize="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/rowTitleText"
        android:gravity="left|center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/switch1"
        android:layout_toLeftOf="@+id/switch1"
        android:layout_toEndOf="@+id/rowTimeText"
        android:layout_toRightOf="@+id/rowTimeText"
        android:text="try"
        android:textSize="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/rowLocationText"
        android:gravity="left"
        android:layout_below="@+id/rowTitleText"
        android:layout_toLeftOf="@+id/switch1"
        android:layout_toStartOf="@+id/switch1"
        android:layout_toEndOf="@+id/rowTimeText"
        android:layout_toRightOf="@+id/rowTimeText"
        android:text="try"
        android:textSize="30dp"
        android:textColor="#000000" />

    <Switch
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="false"
        android:gravity="center"
        android:layout_alignBottom="@+id/rowLocationText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FFFF"
        android:layout_below="@+id/rowLocationText"
        ></View>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#00FFFF"
        android:layout_alignRight="@+id/rowTimeText"></View>


</RelativeLayout>
